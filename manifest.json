{
    "manifest_version": 2,
    "name": "비즈메일 - 비즈니스 영어 이메일 표현 모음",
    "version": "1.0.0",
    "description": "비즈니스 이메일 표현을 위한 확장앱",
    "icons": {
        "16": "icons/bizmail.png",
        "48": "icons/bizmail.png",
        "128": "icons/bizmail.png"
    },


    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "sidebar_action": {
        "default_page": "index.html",
        "default_icon": {
          "16": "icons/bizmail.png"
        },
        "default_title": "비즈메일 - 비즈니스 영어 이메일 표현 모음"
      }

}